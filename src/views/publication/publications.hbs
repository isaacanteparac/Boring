<div class="post viewPostContentuser">
    <!--NOTE:crear un mapa que le llegue el contenido de las personas que sigue-->
    {{#each postUserContent}}
        <div class="userPost">
        
            <!--NOTE:CONTENVIEW-->
            <div class="fileUser">
                <img src="/iconos/dua.jpg" class="contentImagen" />
            </div>

            <!--NOTE:INFORMATION USER-->
            <div class="information">
                <a href="/profile" class="linkdec">
                    <div class="photoUser">
                        <img src="/iconos/isaac.jpg" />
                    </div>

                    <div class="nameUser">
                        <h4>hy</h4>
                    </div>
                    <div class="messageUser">
                        <label>{{id}}</label>
                    </div>
                </a>
            </div>


            <!--NOTE:INTERACTION POST USER-->
            <div class="interactionPost">
                <!--NOTE:LIKES--->
                <a href="/publication/likes/{{this.id}}"  class="linkdec btnInteraction">
                    <svg class="iconInterac iconLikesPost" id="heart" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                        viewBox="0 0 24 24">
                        <path fill="currentcolor"
                            d="M12 4.248c-3.148-5.402-12-3.825-12 2.944 0 4.661 5.571 9.427 12 15.808 6.43-6.381 12-11.147 12-15.808 0-6.792-8.875-8.306-12-2.944z" />
                    </svg>
                </a>
                
                
                <!--NOTE:COMMENTS--->
                <a href="/comments" id="btnCommentPublication">
                    <button class="btnInteraction" >
                        <svg class="iconInterac iconCommentPost" id="coment" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                            viewBox="0 0 24 24">
                            <path fill="currentcolor"
                                d="M.054 23c.971-1.912 2.048-4.538 1.993-6.368-1.308-1.562-2.047-3.575-2.047-5.625 0-5.781 5.662-10.007 12-10.007 6.299 0 12 4.195 12 10.007 0 6.052-6.732 11.705-15.968 9.458-1.678 1.027-5.377 2.065-7.978 2.535z" />
                        </svg>
                    </button>
                </a>
                <!--NOTE:SAVE POST--->
                <button class="btnInteraction">
                    <svg class="iconInterac iconSavePost" id="share" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                        viewBox="0 0 24 24">
                        <path fill="currentcolor"
                        d="M18 24l-6-5.269-6 5.269v-24h12v24z"/>                
                    </svg>
                </button>    
            </div>
        
        </div>
    {{/each}}
    <!------------------------------------>


</div>