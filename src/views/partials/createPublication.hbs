<div class="divBlur" id="boxCreatePublication">
    <div class="contentBoxBlur">
        <div class="contentNewPost">
            
            <form action="/publication/create" method="post" autocomplete="off">
                <label class="btnClose" id="windowCreatePublication">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path fill="currentcolor"
                            d="M12 2c5.514 0 10 4.486 10 10s-4.486 10-10 10-10-4.486-10-10 4.486-10 10-10zm0-2c-6.627 0-12 5.373-12 
                            12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm5 15.538l-3.592-3.548 3.546-3.587-1.416-1.403-3.545 3.589-3.588-3.543-1.405 
                            1.405 3.593 3.552-3.547 3.592 1.405 1.405 3.555-3.596 3.591 3.55 1.403-1.416z"/>
                        </svg>
                </label>
                
                <h3 class="subtitle">New Post</h3>

                <div class="descriptionNewPost">
                    <textarea type="text" autofocus id="descriptionPublication"
                    name="description" placeholder="What are you thinking?"></textarea>
                </div>

                <div class="divClosePublication">
                    <label class="btnClose" id="eliminarFileCreatePublication">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path fill="currentcolor"
                            d="M12 2c5.514 0 10 4.486 10 10s-4.486 10-10 10-10-4.486-10-10 4.486-10 10-10zm0-2c-6.627 0-12 5.373-12 
                            12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm5 15.538l-3.592-3.548 3.546-3.587-1.416-1.403-3.545 3.589-3.588-3.543-1.405 
                            1.405 3.593 3.552-3.547 3.592 1.405 1.405 3.555-3.596 3.591 3.55 1.403-1.416z"/>
                        </svg>
                    </label>
                </div>

                <div class="preview">
                    <!--NOTE: HACER UNA VISTA DEL CONTENIDO QUE SE VA A SUBIR-->
                    <div class="previewFile" id="viewVideo">
                        <div class="overlay">
                            <div class="button"></div>
                        </div>
                        
                        <div id="video" class="video">
                            <video id="previewVideoUser"></video>
                        </div>
                    </div>
                
                    <img class="previewFile" id="viewImagen"/>
                  
                    
                </div>
                <div class="optionViewPreview">
                     <div class="controlsVideo" id="controls">
                        <div class="ProgressContainer">
                            <div class="intialTime">
                                00:00
                            </div>
                            <div class="progressBar">
                                <div class="progress"></div>
                            </div>
                            <div class="fullTime">
                                00:00
                            </div>
                        </div>
                    
                        <div class="volume">
                            <div class="icon"></div>
                        </div>
                    </div>
                    
                </div>

                
            

                <div class="divBtnUpadateBottom">
                    <div class="contentTypeFile">
                        <div class="fileUpload">
                            <input type="file" 
                            id="selectImagePublication"
                            className="convertBase64blod"
                            class="upload" className="convertBase64blod" 
                            accept="image/png, image/jpeg, image/jpg, image/gif" name="file_content" />
                            <span>
                                <svg class="iconsNewPost" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                    viewBox="0 0 24 24">
                                    <path fill="currentcolor"
                                        d="M5 8.5c0-.828.672-1.5 1.5-1.5s1.5.672 1.5 1.5c0 .829-.672 1.5-1.5 1.5s-1.5-.671-1.5-1.5zm9 .5l-2.519 4-2.481-1.96-4 5.96h14l-5-8zm8-4v14h-20v-14h20zm2-2h-24v18h24v-18z" />
                                </svg>
                            </span>
                        </div>


                        <div class="fileUpload">
                            <input type="file" 
                            id="selectVideoPublication"
                            className="convertBase64blod"
                            class="upload" accept="video/mp4"
                            name="file_content" />
                            <span>
                                <svg class="iconsNewPost" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                    viewBox="0 0 24 24">
                                    <path fill="currentcolor"
                                        d="M12 2c5.514 0 10 4.486 10 10s-4.486 10-10 10-10-4.486-10-10 4.486-10 10-10zm0-2c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-3 17v-10l9 5.146-9 4.854z" />
                                </svg>
                            </span>
                        </div>


                        <div class="fileUpload">
                            <input type="file" 
                            id="selectAudioPublication"
                            className="convertBase64blod"
                            class="upload" 
                            accept="audio/mp3" 
                            name="file_content" />
                            <span>
                                <svg class="iconsNewPost" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                    viewBox="0 0 24 24">
                                    <path fill="currentcolor"
                                        d="M22 0v24l-11-6v-2.278l9 4.909v-17.262l-9 4.91v-2.279l11-6zm-13 6v12h-7v-12h7zm-2 2h-3v8h3v-8z" />
                                </svg>
                            </span>
                        </div>


                        <div class="fileUpload">
                            <input type="file" 
                            id="selectFilePublication"
                            className="convertBase64blod"
                            class="upload" 
                            accept=".doc, .docx,.ppt, .pptx, .pdf, .zip"
                            name="file_content" />
                            <span>
                                <svg class="iconsNewPost" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                    viewBox="0 0 24 24">
                                    <path fill="currentcolor" d="M15 2v5h5v15h-16v-20h11zm1-2h-14v24h20v-18l-6-6z" />
                                </svg>
                            </span>
                        </div>
                    </div>
                    <button type="submit" class="btnNewPost">
                        Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>